{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // "allowJs": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ESNext",
        "traceResolution": false,
        "baseUrl": ".",
        "paths": {
            "#rxjs-src/*": [
                "node_modules/rxjs/src/*",
            ],
        },
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
        /* "node_modules/rxjs/src/internal" */
    ],
    "exclude": [
        "node_modules",
        /* "!node_modules/rxjs/src/internal", */
        "src/**/*.example.ts",
        "src/**/*.spec.ts"
    ]
}
